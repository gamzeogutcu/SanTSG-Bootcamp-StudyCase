@* To list Users name,password,email,registration date *@
@model List<HotelBooking.Domain.Users.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Users</h1>


<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th>Password</th>
            <th>Email</th>
            <th>Registration Date</th>
            <th>Is Active?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Password</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate</td>
                <td>@user.IsActive</td>
                 <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>