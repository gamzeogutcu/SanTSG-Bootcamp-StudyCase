@model HotelBooking.Domain.Users.User
    <div class="row text">

        <div class="col-md-8 offset-2">
            <form method="post" asp-action="Delete">
                <h1>Delete User</h1>

                <input asp-for="Id" hidden />


                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input disabled asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input disabled asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input disabled asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input disabled asp-for="IsActive" />
                </div>
                <button type="submit" class="SaveButton">Delete</button>
                <a asp-controller="User" asp-action="Index">Back to List</a>
            </form>
            </div>
        </div>
            @section Scripts{
                @{
                    <partial name="_ValidationScriptsPartial" />
                }

            }
